<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="avocardio.avocardioapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".Connections.Api.App"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/launcher_logo_avocardio"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_logo_avocardio_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.OnBoarding.OnBoardingActivity"></activity>
        <activity android:name=".Activities.OnBoarding.SplashActivity"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Activities.ActivationAcount.ActivationAccountActivity"
            android:windowSoftInputMode="stateVisible">

        </activity>
        <activity android:name=".Activities.Password.ResetPasswordActivity"></activity>
        <activity android:name=".Activities.Password.EmailActivity" />
        <activity android:name=".Activities.Main.MainActivity" />
        <activity android:name=".Activities.Register.RegisterActivity_2" />
        <activity android:name=".Activities.Register.RegisterActivity_1" />
        <activity android:name=".Activities.Login.LoginActivity"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts"
            />
    </application>
</manifest>